<h1>CoShared Buildings</h1>

<a href="/companies/new">Need some company?</a>

<table id="all-buildings-table">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Address</th>
    <th>Rent Per Floor</th>
    <th>Number of Floors</th>
    <th>Occupied Floors</th>
    <th>Available Floors</th>
  </tr>

  <% @buildings.each do |building| %>
    <tr>
      <td>
        <a href="/buildings/<%= building.id %>"><%= building.name %></a>
      </td>
      <td><%= building.country %></td>
      <td><%= building.address %></td>
      <td><%= building.rent_per_floor %></td>
      <td><%= building.number_of_floors %></td>
      <td><%=
        building.occupied_floors.length > 0 ? select_tag("start_time", options_for_select(building.occupied_floors)) : "NONE!" 
      %></td>
      <td><%=
        building.available_floors.length > 0 ? select_tag("start_time", options_for_select(building.available_floors)) : "NONE!"
        %></td>
    </tr>
  <% end %>

</table>
